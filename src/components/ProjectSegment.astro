---
import Technology from "./Technology.astro";

const { name, description, technologies, link = "#" } = Astro.props;
---

<div class="mb-6">
  <div class="mb-2">
    <a href={link} class={`text-white text-lg font-semibold ${link ? "underline" : ""}`}>{name}</a>
  </div>
  <p class="mb-2">{description}</p>
  <div class="flex flex-wrap gap-2">
    {technologies.map((tech: string) => <Technology technology={tech} />)}
  </div>
</div>
