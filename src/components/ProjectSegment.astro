---
import Technology from "./Technology.astro";

const { name, description, technologies } = Astro.props;
---

<div class="my-6">
  <h3 class="text-white text-lg font-semibold mb-2">{name}</h3>
  <p class="mb-2">{description}</p>
  <div class="flex flex-wrap gap-2">
    {technologies.map((tech: string) => <Technology technology={tech} />)}
  </div>
</div>
