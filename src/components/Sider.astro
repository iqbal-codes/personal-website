<header
  class="hidden lg:flex max-h-dvh w-1/2 flex-[2] sticky top-0 flex-col py-10"
>
  <div class="mb-10">
    <h1 class="text-4xl sm:text-5xl font-bold mt-2">Muhammad Iqbal</h1>
    <h2 class="text-lg sm:text-xl mt-3">Front-End Engineer</h2>
    <h3 class="text-gray-400 mt-3 text-sm sm:text-base">
      I build pixel-perfect, engaging, and<br /> accessible user experiences.
    </h3>
  </div>
  <nav class="flex flex-col mt-8 space-y-2 flex-1">
    <a
      id="about-nav"
      class="cursor-pointer w-full text-left py-2 text-gray-400 text-sm font-semibold hover:text-white transition-colors duration-200"
      onclick="document.getElementById('about').scrollIntoView({behavior: 'smooth'});"
    >
      ABOUT
    </a>
    <a
      id="experiences-nav"
      class="cursor-pointer w-full text-left py-2 text-gray-400 text-sm font-semibold hover:text-white transition-colors duration-200"
      onclick="document.getElementById('experiences').scrollIntoView({behavior: 'smooth'});"
    >
      EXPERIENCES
    </a>
  </nav>
  <div class="flex space-x-2">
    <a
      href="https://github.com/iqbal-codes"
      target="_blank"
      rel="noopener noreferrer"
      class="hover:opacity-80 transition-opacity duration-200"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 16 16"
        fill="currentColor"
        class="h-6 w-6"
        aria-hidden="true"
        ><path
          d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"
        ></path></svg
      >
    </a>
    <a
      href="https://www.linkedin.com/in/muhammad-iqbal23/"
      target="_blank"
      rel="noopener noreferrer"
      class="hover:opacity-80 transition-opacity duration-200"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="h-6 w-6"
        aria-hidden="true"
        ><path
          d="M20.5 2h-17A1.5 1.5 0 002 3.5v17A1.5 1.5 0 003.5 22h17a1.5 1.5 0 001.5-1.5v-17A1.5 1.5 0 0020.5 2zM8 19H5v-9h3zM6.5 8.25A1.75 1.75 0 118.3 6.5a1.78 1.78 0 01-1.8 1.75zM19 19h-3v-4.74c0-1.42-.6-1.93-1.38-1.93A1.74 1.74 0 0013 14.19a.66.66 0 000 .14V19h-3v-9h2.9v1.3a3.11 3.11 0 012.7-1.4c1.55 0 3.36.86 3.36 3.66z"
        ></path></svg
      >
    </a>
  </div>
  <script>
    const observerOptions = {
      root: null,
      rootMargin: "-20% 0px -75% 0px",
      threshold: 0,
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        const id = entry.target.getAttribute("id");
        const navItem = document.getElementById(`${id}-nav`);

        if (entry.isIntersecting) {
          navItem?.classList.remove("text-gray-400");
          navItem?.classList.add("text-white");
        } else {
          navItem?.classList.remove("text-white");
          navItem?.classList.add("text-gray-400");
        }
      });
    }, observerOptions);

    // Observe sections
    document.addEventListener("DOMContentLoaded", () => {
      const sections = ["about", "experiences"];
      sections.forEach((section) => {
        const element = document.getElementById(section);
        if (element) observer.observe(element);
      });
    });
  </script>
</header>
